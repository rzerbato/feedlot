<div class="col-lg-12 col-12">
    <table id="usuarios" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th class="text-center columnaAcciones">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each usuarios}}
                <tr>
                    <td>
                        {{{ this.fullName }}}
                    </td>
                    <td>
                        {{{ this.email }}}
                    </td>
                    <td class="columnaAcciones">
                        <div class="row">
                            <div class="offset-lg-3 col-lg-2 col-2">
                                <a href="/usuarios/edit/{{{this.id}}}" class="text-dark"><i class="fa fa-pen" aria-hidden="true"></i></a>
                            </div>
                            <div class="offset-lg-1 col-lg-2 col-2">
                                <a href="#" class="text-dark eliminar"><i class="fa fa-trash" id="{{{this.id}}}" aria-hidden="true"></i></a>
                            </div>
                        </div>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>


<script src="/dist/js/usuario/usuario.js"></script>