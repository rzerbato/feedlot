
{{#if errores}}
<div class="col-lg-12 col-12">
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <h3>Se detectaron los siguientes errores:</h3>
    {{#each errores}}
        {{texto}}
        <br>
    {{/each}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>
{{/if}}

<div class="col-lg-12 col-12">
    <form action="/usuarios/add" method="post" id="formAdd">
        <div class="row">
            <div class="offset-lg-4 col-lg-4 col-12">
                <div class="form-group">
                    <label>Nombre <span class="red-color">*</span>:</label>
                    <div class="input-group">
                        <input type="text" class="form-control" name="nombre" placeholder="Nombre" value="{{nombre}}">
                    </div> <!-- /.input group -->
                </div> <!-- /.form group -->
            </div> <!-- col-lg-6 col-12 -->            
        </div> <!-- /.row -->        
        <div class="row">
            <div class="offset-lg-4 col-lg-4 col-12">
                <div class="form-group">
                    <label>Mail <span class="red-color">*</span>:</label>
                    <div class="input-group">
                        <input type="email" class="form-control" name="mail" placeholder="e-mail" value="{{mail}}">
                    </div> <!-- /.input group -->
                </div> <!-- /.form group -->
            </div> <!-- col-lg-6 col-12 -->
        </div> <!-- /.row -->
        <div class="row">
            <div class="offset-lg-4 col-lg-4 col-12">
                <div class="form-group">
                    <label>Clave <span class="red-color">*</span>:</label>
                    <div class="input-group">
                        <input type="password" class="form-control" name="password" placeholder="Clave - MÃ­nimo 8 caracteres">
                    </div> <!-- /.input group -->
                </div> <!-- /.form group -->
            </div> <!-- /.col-lg-6 col-12 -->
        </div> <!-- /.row -->

    </form>
</div> <!-- /.col-lg-12 col-12 -->

<script src="/dist/js/usuario/usuario.js"></script>